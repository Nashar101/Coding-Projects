<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!--create a DialogPane and include the appropriate controller-->
<DialogPane fx:controller="fsd.assignment.assignment1.EditStudentController"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="20" hgap="20">
            <Label text="Year of Study" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="Module Option 1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Module Option 2" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Label text="Module Option 3" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Label GridPane.rowIndex="1" fx:id="yearStudyDisplay"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="mod1Edit"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="2" fx:id="mod2Edit"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="3" fx:id="mod3Edit"/>
            <Label text="Module Option 1" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Module Option 2" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <Label text="Module Option 3" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
            <ChoiceBox GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="mod1ChoiceEdit"/>
            <ChoiceBox GridPane.rowIndex="3" GridPane.columnIndex="2" fx:id="mod2ChoiceEdit"/>
            <ChoiceBox GridPane.rowIndex="3" GridPane.columnIndex="3" fx:id="mod3ChoiceEdit"/>
            <!--make use of the EditStudentController to complete the rest of the fxml-->
        </GridPane>
    </content>
</DialogPane>

